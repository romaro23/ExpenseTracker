<Window
    x:Class="ExpenseTracker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="clr-namespace:ExpenseTracker.Data"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Трекер витрат"
    Width="850"
    Height="500"
    Background="#f0f2f5"
    mc:Ignorable="d">

    <Window.Resources>
        <data:CurrencyConverter x:Key="CurrencyConverter" />
        <Style x:Key="ShadowButton" TargetType="Button">
            <Setter Property="Background" Value="#3C4F6D" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="5"
                        Opacity="0.3"
                        ShadowDepth="2"
                        Color="#444" />
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0053B3" />
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect
                                BlurRadius="10"
                                Opacity="0.6"
                                ShadowDepth="3"
                                Color="#0053B3" />
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.05" ScaleY="1.05" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95" />
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Effect" Value="{x:Null}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CardShadow" TargetType="Border">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="8"
                        Opacity="0.2"
                        ShadowDepth="3"
                        Color="#aaa" />
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="White" />
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="BorderBrush" Value="#DDD" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style x:Key="SummaryText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Frame
            x:Name="MainFrame"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            NavigationUIVisibility="Hidden" />
        <Border
            Grid.Column="0"
            Padding="15"
            Background="#2E3B4E"
            CornerRadius="8"
            Style="{StaticResource CardShadow}">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,25"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Меню" />

                <StackPanel Margin="0,0,0,20">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Баланс:" />
                    <TextBlock
                        FontSize="15"
                        Foreground="LightGreen"
                        Text="{Binding BalanceUAH, StringFormat='₴ {0:F2}'}" />
                    <TextBlock
                        FontSize="15"
                        Foreground="LightGreen"
                        Text="{Binding BalanceUSD, StringFormat='$ {0:F2}'}" />
                    <TextBlock
                        FontSize="15"
                        Foreground="LightGreen"
                        Text="{Binding BalanceEUR, StringFormat='€ {0:F2}'}" />
                </StackPanel>

                <Button
                    Margin="0,5"
                    Click="OnExpenseClick"
                    Content="Витрати"
                    FontSize="17"
                    Style="{StaticResource ShadowButton}" />
                <Button
                    Margin="0,5"
                    Click="OnIncomeClick"
                    Content="Надходження"
                    FontSize="17"
                    Style="{StaticResource ShadowButton}" />
                <Button
                    Margin="0,5"
                    Click="OnStatsClick"
                    Content="Статистика"
                    FontSize="17"
                    Style="{StaticResource ShadowButton}" />
                <Button
                    Margin="0,20,0,5"
                    Command="{Binding ChangeAccountCommand}"
                    Content="Змінити акаунт"
                    FontSize="17"
                    Style="{StaticResource ShadowButton}" />
                <StackPanel Margin="0,10">
                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Макс. сума витрат:" />
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <TextBox
                            Width="50"
                            Margin="0"
                            Padding="6"
                            materialDesign:HintAssist.Hint="UAH"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="16"
                            Foreground="White"
                            Text="{Binding MaxExpenseLimitUAH, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBox
                            Width="50"
                            Margin="0"
                            Padding="6"
                            materialDesign:HintAssist.Hint="USD"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="16"
                            Foreground="White"
                            Text="{Binding MaxExpenseLimitUSD, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBox
                            Width="50"
                            Margin="0"
                            Padding="6"
                            materialDesign:HintAssist.Hint="EUR"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="16"
                            Foreground="White"
                            Text="{Binding MaxExpenseLimitEUR, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <Button
                        Command="{Binding SaveLimitCommand}"
                        CommandParameter="dummy"
                        Content="Зберегти ліміт"
                        FontSize="17"
                        Style="{StaticResource ShadowButton}" />
                </StackPanel>
            </StackPanel>

        </Border>

    </Grid>
</Window>
