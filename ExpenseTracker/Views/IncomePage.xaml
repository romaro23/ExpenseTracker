<Page x:Class="ExpenseTracker.Views.IncomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExpenseTracker.Views"
      xmlns:data="clr-namespace:ExpenseTracker.Data"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"
      Width="Auto"
      Height="Auto"
      Title="IncomesPage">

    <Page.Resources>
        <data:CurrencyConverter x:Key="CurrencyConverter" />
        <Style x:Key="ShadowButton" TargetType="Button">
            <Setter Property="Background" Value="#3C4F6D" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="5"
                        Opacity="0.3"
                        ShadowDepth="2"
                        Color="#444" />
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0053B3" />
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect
                                BlurRadius="10"
                                Opacity="0.6"
                                ShadowDepth="3"
                                Color="#0053B3" />
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.05" ScaleY="1.05" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95" />
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Effect" Value="{x:Null}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CardShadow" TargetType="Border">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="8"
                        Opacity="0.2"
                        ShadowDepth="3"
                        Color="#aaa" />
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="White" />
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="BorderBrush" Value="#DDD" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style x:Key="SummaryText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>
    </Page.Resources>
    <Grid>
        <Grid Grid.Column="1" Margin="20,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel
        Margin="0,0,0,15"
        VerticalAlignment="Center"
        Orientation="Horizontal">
                <Border
            Margin="5"
            Padding="0"
            Background="White"
            BorderBrush="#CCC"
            BorderThickness="1"
            CornerRadius="5">
                    <ComboBox materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                      BorderThickness="0"
                      Width="100"
                      Margin="0,0,10,0"
                      Padding="5"
                      materialDesign:HintAssist.Hint="Категорія"
                      ItemsSource="{Binding AvailableFilterCategories}"
                      SelectedItem="{Binding FilterCategory}" />
                </Border>
                <Border
            Margin="5"
            Padding="0"
            Background="White"
            BorderBrush="#CCC"
            BorderThickness="1"
            CornerRadius="5">
                    <DatePicker materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        Width="140"
                        Margin="0"
                        Padding="0"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        BorderThickness="0"
                        SelectedDate="{Binding FilterDateFrom}" />
                </Border>
                <Border
            Margin="5"
            Padding="0"
            Background="White"
            BorderBrush="#CCC"
            BorderThickness="1"
            CornerRadius="5">
                    <DatePicker materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        Width="140"
                        Margin="0"
                        Padding="0"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        BorderThickness="0"
                        SelectedDate="{Binding FilterDateTo}" />
                </Border>
                <Button
            Margin="0,0,10,0"
            Command="{Binding ApplyFilterCommand}"
            Content="Застосувати"
            Style="{StaticResource ShadowButton}" />
                <Button
            Margin="0,0,10,0"
            Command="{Binding ClearCommand}"
            Content="Скинути"
            Style="{StaticResource ShadowButton}" />
            </StackPanel>

            <ScrollViewer Grid.Row="1">
                <ItemsControl ItemsSource="{Binding GroupedIncomes}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,20">
                                <TextBlock
                Text="{Binding Date}"
                FontSize="18"
                FontWeight="Bold"
                Foreground="#444"
                Margin="0,0,0,8" />

                                <ItemsControl ItemsSource="{Binding Incomes}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource CardShadow}" Margin="0,0,0,10" Padding="10">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="120"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="90"/>
                                                        <ColumnDefinition Width="90"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock
                                                Grid.Column="0"
                                                FontWeight="SemiBold"
                                                VerticalAlignment="Center"
                                                Text="{Binding Date, StringFormat=HH:mm}" />

                                                    <TextBlock
                                                Grid.Column="1"
                                                Margin="10,0"
                                                VerticalAlignment="Center"
                                                Text="{Binding Category}" 
                                                TextTrimming="CharacterEllipsis" />

                                                    <TextBlock
                                                Grid.Column="2"
                                                Margin="10,0"
                                                VerticalAlignment="Center"
                                                Text="{Binding Description}" 
                                                TextTrimming="CharacterEllipsis" />

                                                    <TextBlock
                                                Grid.Column="3"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                FontWeight="Bold"
                                                Foreground="Green"
                                                Text="{Binding ., Converter={StaticResource CurrencyConverter}}" />

                                                    <StackPanel Grid.Column="4" Orientation="Horizontal" Grid.ColumnSpan="2">
                                                        <Button
                                                            Width="80"
                                                            Margin="10,0,0,0"
                                                            VerticalAlignment="Center"
                                                            Command="{Binding DataContext.DeleteIncomeCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                            CommandParameter="{Binding}"
                                                            Content="Видалити"
                                                            Style="{StaticResource ShadowButton}" />
                                                        <Button
                                                            Width="80"
                                                            Margin="10,0,0,0"
                                                            VerticalAlignment="Center"
                                                            Command="{Binding DataContext.FillIncomeCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                            CommandParameter="{Binding}"
                                                            Content="Редагувати"
                                                            Style="{StaticResource ShadowButton}" />
                                                    </StackPanel>

                                                </Grid>
                                            </Border>
                                        </DataTemplate>

                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>


            <Border
        Grid.Row="2"
        Margin="0,20,0,0"
        Padding="15"
        Background="#0078D7"
        CornerRadius="5"
        Style="{StaticResource CardShadow}">
                <TextBlock Style="{StaticResource SummaryText}" Text="{Binding TotalAmount, StringFormat=Загальна сума: {0:C}}" />
            </Border>
            <StackPanel
        Grid.Row="3"
        Margin="0,20,0,0"
        HorizontalAlignment="Left"
        Orientation="Horizontal">
                <Border
            Margin="5"
            Padding="0"
            Background="White"
            BorderBrush="#CCC"
            BorderThickness="1"
            CornerRadius="5">
                    <TextBox
                Width="100"
                Margin="0"
                Padding="6"
                materialDesign:HintAssist.Hint="Сума"
                Background="Transparent"
                BorderThickness="0"
                Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}" />
                </Border>
                <Border
            Margin="5"
            Padding="0"
            Background="White"
            BorderBrush="#CCC"
            BorderThickness="1"
            CornerRadius="5">
                    <ComboBox materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                      BorderThickness="0"
                      Width="100"
                      Margin="0,0,10,0"
                      Padding="5"
                      materialDesign:HintAssist.Hint="Категорія"
                      ItemsSource="{Binding AvailableCategories}"
                      SelectedItem="{Binding Category}" />
                </Border>
                <Border
            Margin="5"
            Padding="0"
            Background="White"
            BorderBrush="#CCC"
            BorderThickness="1"
            CornerRadius="5">
                    <TextBox
                Width="100"
                Margin="0"
                Padding="6"
                materialDesign:HintAssist.Hint="Опис"
                Background="Transparent"
                BorderThickness="0"
                Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" />
                </Border>
                <Border
            Margin="5"
            Padding="0"
            Background="White"
            BorderBrush="#CCC"
            BorderThickness="1"
            CornerRadius="5">
                    <ComboBox materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                      BorderThickness="0"
                      Width="80"
                      Margin="0,0,10,0"
                      Padding="5"
                      materialDesign:HintAssist.Hint="Валюта"
                      ItemsSource="{Binding AvailableCurrencies}"
                      SelectedItem="{Binding Currency}" />
                </Border>
                <Border
                    Margin="5"
                    Padding="0"
                    Background="White"
                    BorderBrush="#CCC"
                    BorderThickness="1"
                    CornerRadius="5">
                    <xctk:DateTimePicker 
                        Value="{Binding Date}" 
                        Format="Custom" 
                        FormatString="dd.MM.yyyy HH:mm"
                        Width="200"
                        Margin="0"
                        Padding="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        BorderThickness="0"
                    />
                </Border>
                <Button
            Margin="0,0,10,0"
            Background="#28A745"
            Command="{Binding AddIncomeCommand}"
            CommandParameter="dummy"
            Content="{Binding ButtonText}"
            FontWeight="Bold"
            Style="{StaticResource ShadowButton}" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
