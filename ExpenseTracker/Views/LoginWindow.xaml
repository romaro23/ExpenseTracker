<Window x:Class="ExpenseTracker.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ExpenseTracker.Views"
        xmlns:viewModels="clr-namespace:ExpenseTracker.ViewModels"
        mc:Ignorable="d"
        Title="Авторизація" Width="350" Height="300">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Логін:" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Username}" Margin="0,0,0,15"/>

            <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
            <PasswordBox Margin="0,0,0,15"
                         materialDesign:PasswordBoxAssist.Password="{Binding Password, Mode=TwoWay}"
                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
            />

            <Button CommandParameter="dummy" Content="Увійти" Command="{Binding LoginCommand}" 
                    Margin="0,0,0,10"/>

            <Button Content="Зареєструватися" Command="{Binding RegisterCommand}"/>
        </StackPanel>
    </Grid>
</Window>
